<Page x:Class="EducationCenter.Desktop.Pages.PaymentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EducationCenter.Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PaymentsPage">
    <Grid>
        <TabControl Style="{DynamicResource FlatTabControlStyle}"
                    Padding="15">
            <TabItem Header="Student payments" IsSelected="True"
                     Style="{StaticResource FlatTabItemStyle}">
                <Label Content="Content goes here..." />
            </TabItem>
            <TabItem Header="Teacher payments" 
                     Style="{StaticResource FlatTabItemStyle}"/>
            <TabItem Header="Employee payments" 
                     Style="{StaticResource FlatTabItemStyle}"/>
        </TabControl>
    </Grid>
</Page>
