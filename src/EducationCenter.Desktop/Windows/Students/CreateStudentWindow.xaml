<Window x:Class="EducationCenter.Desktop.Windows.Students.CreateStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EducationCenter.Desktop.Windows.Students"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Style="{DynamicResource SubWindow}"
        Title="CreateStudentWindow" 
        Height="500" Width="900">
    <Grid>
        <TextBox 
           FontSize="13"
           VerticalAlignment="Center"
           Background="#FAFAFA"
           HorizontalAlignment="Center"
           materialDesign:HintAssist.Hint="Last name" 
           BorderBrush="{DynamicResource MaterialDesignDivider}"
           Style="{StaticResource MaterialDesignOutlinedTextBox}" Width="384"/>             
    </Grid>
</Window>
