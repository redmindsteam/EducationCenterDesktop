<Window x:Class="EducationCenter.Desktop.Windows.Positions.CreatePositionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EducationCenter.Desktop.Windows.Positions"
        mc:Ignorable="d"
        Title="CreatePositionWindow" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{DynamicResource SubWindow}"
        Height="200" 
        Width="400">
    <StackPanel>
        <TextBox 
           x:Name="tbPosition"
           FontSize="13"
           VerticalAlignment="Center"
           Background="#FAFAFA"
           HorizontalAlignment="Center"
           materialDesign:HintAssist.Hint="Last name" 
           BorderBrush="{DynamicResource MaterialDesignDivider}"
           Style="{StaticResource MaterialDesignOutlinedTextBox}" 
           Width="384"/>

        <Button
            Margin="9"
            Height="40"
            Style="{StaticResource CreateButton}">
            Create
        </Button>
        
    </StackPanel>
</Window>
